		SELECT COUNT(USER_NO) FROM USERS
	</select>

	<!-- 회원 리스트 조회 -->
	<select id="selectAll" resultMap="user_rm">
		SELECT
		USER_NO
		, USER_EMAIL
		, USER_NAME
		, USER_NICKNAME
		, USER_TEL
		, USER_ADDR
		, USER_BIRTH
		, USER_GENDER
