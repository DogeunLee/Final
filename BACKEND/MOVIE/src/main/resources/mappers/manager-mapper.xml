	<!-- 관리자_1:1 문의 목록 조회 -->
	<select id="getAllMTMList" resultMap="jcs_rm">
		SELECT 
		m.MTM_NO
		, m.MTM_TITLE
		, m.MTM_CONTENT
		, u.USER_EMAIL
		, m.MTM_TYPE
		, m.MTM_ST
		, m.MTM_COUNT
		, TO_CHAR(m.MTM_REGDATE, 'YYYY-MM-DD HH24:MI') AS MTM_REGDATE
		, m.MTM_WRITER
		, m.MTM_REPWRITER
		, m.MTM_REPST
		, m.MTM_REPCONTENT
		, TO_CHAR(m.MTM_REPDATE, 'YYYY-MM-DD HH24:MI') AS MTM_REPDATE
		FROM MTM_TBL m
		INNER JOIN USERS u ON m.USER_NO = u.USER_NO
		ORDER BY m.MTM_REGDATE DESC
	</select>
