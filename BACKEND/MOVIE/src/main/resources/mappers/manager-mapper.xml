		, USER_DELETE
		, USER_ST
		, USER_POINT
		, USER_SNS
		, USER_MANAGERST
		, USER_BLOCK
		FROM USERS
		ORDER BY USER_NO DESC
	</select>

	<!--회원 관리자 상태 업데이트 -->
	<update id="updateST" parameterType="user">
		UPDATE USERS
		SET USER_MANAGERST = #{userManagerSt}
		WHERE USER_EMAIL = #{userEmail}
	</update>

