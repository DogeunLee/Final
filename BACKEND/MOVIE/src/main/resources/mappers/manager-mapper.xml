	<!-- 관리자 메인 신규 회원 목록 조회 -->
	<select id="getAllUser" resultMap="user_rm">
		SELECT
		*
		FROM
		(
		SELECT * FROM USERS
		ORDER BY USER_NO DESC
		)
		WHERE ROWNUM 		<![CDATA[ <= ]]>
		6
	</select>

	<!-- 관리자 메인 공지사항 목록 조회 -->
	<select id="getAllNotice" resultMap="notice_rm">
		SELECT
		*
		FROM
		(
		SELECT * FROM NOTICE
		ORDER BY NOTICE_NO DESC
		)
		WHERE ROWNUM 		<![CDATA[ <= ]]>
		6
	</select>
	
	<!-- 관리자 메인 1 : 1 문의 조회 -->
